source "http://rubygems.org/"

ruby "2.2.2"

gem "rake"

# use to post data
gem 'httparty'

# use for scheduling
gem 'rufus-scheduler'

# use for scrapping
gem 'nokogiri'

# declare the sinatra dependency
gem "sinatra"

# Puma webserver
gem 'puma'

# simple db
gem "sqlite3"

# key-value db
gem "redis"

# setup our test group and require rspec
group :test do
  gem "rspec"
end
